<?xml version="1.0" encoding="utf-8"?>
<fragment xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/map"
    android:name="com.google.android.gms.maps.SupportMapFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MapsActivity" >

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_rectangle"
        android:onClick="onClick"
        android:selectAllOnFocus="false"
        android:shadowColor="#51A894"
        android:shadowDx="0"
        android:shadowDy="2"
        android:text="Open GPS"></Button>
    <Button
        android:id="@+id/unbindBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:background="@drawable/shape_rectangle"
        android:onClick="onUnClick"
        android:text="Close GPS"></Button>
    <Button
        android:id="@+id/ItemInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="200dp"

        android:text="商品資訊"
        android:background="@drawable/button_roundle" ></Button>
    <Button
        android:id="@+id/scanBoundBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="390dp"
        android:background="@drawable/shape_rectangle"
        android:text="已配對藍芽設備"></Button>
    <TextView
        android:id="@+id/devicesInfo_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="433dp"
        android:text=""></TextView>
    <Button
        android:id="@+id/scanBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="545dp"
        android:background="@drawable/shape_rectangle"
        android:text="尋找藍芽設備"></Button>
    <TextView
        android:id="@+id/devicesInfo_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="440dp"
        android:text=""></TextView>

    <Button
        android:id="@+id/disBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="590dp"
        android:background="@drawable/shape_rectangle"
        android:text="股市圖"></Button>
    <TextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="400dp"/>
</fragment>